<uiscreen>

  <animatedsprite name="0_noise_anim"
                   process_input="false"
                   posX ="-960" posY ="-540" width="1920" height ="1080"
                   image="Media\UI\noise_layer.png"
                   hflip="false" vflip="false"
                   alpha="0.15"
                   fps ="10">
    <frames frame1="Media\UI\noise_layer.png"
            frame2="Media\UI\noise_layer_2.png"
            frame3="Media\UI\noise_layer_3.png"
            frame4="Media\UI\noise_layer_4.png"
            frame5="Media\UI\noise_layer_5.png"
            frame6="Media\UI\noise_layer_6.png"
    />
  </animatedsprite>
  
  <sprite name="1_bg"
          process_input="false"
          posX ="-1024" posY ="-540" width="2048" height ="2048"
          image="Media\\UI\\blank_dark.png"
          hflip="false" vflip="false"
          alpha="0.6">
  </sprite>

  <sprite name="2_menu_backing"
         process_input="false"
         posX ="-390" posY ="-220" width="800" height ="650"
         image="Media\\UI\\pause_menu_backing2.png"
         hflip="false" vflip="false"
         alpha="1.0"
          use_standard_effect="false">
  </sprite>

  <button name="3_resume"
           process_input="true"
           posX ="-125" posY ="100" width="275" height ="100"
           image="Media\\UI\\buttons\\resume.dds"
           image_focus="Media\\UI\\buttons\\resume2.dds"
           image_click="Media\\UI\\buttons\\resume3.dds"
           hflip="false" vflip="false"
           alpha="1.0">

    <actionspressup>
      <unpausegame />
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

  </button>
  
  <button name="4_quit"
           process_input="true"
           posX ="-75" posY ="0" width="150" height ="75"
           image="Media\\UI\\buttons\\quit.dds"
           image_focus="Media\\UI\\buttons\\quit2.dds"
           image_click="Media\\UI\\buttons\\quit3.dds"
           hflip="false" vflip="false"
           alpha="1.0">

    <actionspressup>
      <stopallsounds/>
      <fadeout time="50"/>
      <unpausegame />
      <destroylevel />
      <popui ui="pause_menu"/>
      <popui ui="game_hud"/>
      <pushui ui="mainmenu"/>
      <playmusic sound="" loop="true"/>
      <fadein time="750"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

  </button>
  
</uiscreen>