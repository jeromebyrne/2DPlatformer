<uiscreen>

  <animatedsprite name="0_noise_anim"
                   process_input="false"
                   posX ="-960" posY ="-540" width="1920" height ="1080"
                   image="Media\UI\noise_layer.png"
                   hflip="false" vflip="false"
                   alpha="0.5"
                   fps ="10">
    <frames frame1="Media\UI\noise_layer.png"
            frame2="Media\UI\noise_layer_2.png"
            frame3="Media\UI\noise_layer_3.png"
            frame4="Media\UI\noise_layer_4.png"
            frame5="Media\UI\noise_layer_5.png"
            frame6="Media\UI\noise_layer_6.png"
    />
  </animatedsprite>
  
  <sprite name="1_bg"
          process_input="false"
          posX ="-960" posY ="-540" width="1920" height ="1080"
          image="Media\\UI\\iphone.png"
          hflip="false" vflip="true"
          alpha="1.0"
          use_standard_effect="true">
  </sprite>

  <sprite name="2_menu_backing"
         process_input="false"
         posX ="-100" posY ="-130" width="175" height ="370"
         image="Media\\UI\\pause_backing_2.png"
         hflip="false" vflip="false"
         alpha="0.8"
          use_standard_effect="true">
  </sprite>


  <button name="4_quit"
           process_input="true"
           posX ="-1000" posY ="-600" width="120" height ="120"
           image="Media\\UI\\buttons\\back1.png"
           image_focus="Media\\UI\\buttons\\back2.png"
           image_click="Media\\UI\\buttons\\back2.png"
           hflip="false" vflip="false"
           alpha="1.0"
          use_standard_effect="true">

    <actionspressup>
      <stopallsounds/>
      <fadeout time="150"/>
      <unpausegame />
      <destroylevel />
      <popui ui="pause_menu"/>
      <popui ui="game_hud"/>
      <pushui ui="mainmenu"/>
      <playmusic sound="" loop="true"/>
      <fadein time="150"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav" />
    </actionspressdown>
  </button>

    <button name="5_imagine"
           process_input="true"
           posX ="-203" posY ="172" width="418" height ="137"
           image="Media\\UI\\song_1.png"
           image_focus="Media\\UI\\song_1_s.png"
           image_click="Media\\UI\\song_1.png"
           hflip="false" vflip="true"
           alpha="1.0"
          use_standard_effect="true">

      <actionspressup>
        <stopallsounds/>
        <unpausegame />
        <popui ui="pause_menu"/>
        <playmusic sound="dragons.mp3" loop="true"/>
      </actionspressup>

      <actionspressdown>
        <playsoundeffect sound="UI\\click.wav" />
      </actionspressdown>

    </button>

  <button name="5_lily"
           process_input="true"
           posX ="-203" posY ="35" width="418" height ="137"
           image="Media\\UI\\song_2.png"
           image_focus="Media\\UI\\song_2_s.png"
           image_click="Media\\UI\\song_2.png"
           hflip="false" vflip="true"
           alpha="1.0"
          use_standard_effect="true">

    <actionspressup>
      <stopallsounds/>
      <unpausegame />
      <popui ui="pause_menu"/>
      <playmusic sound="lily_allen.mp3" loop="true"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav" />
    </actionspressdown>

  </button>

  <button name="6_ed"
          process_input="true"
          posX ="-203" posY ="-102" width="418" height ="137"
          image="Media\\UI\\song_3.png"
          image_focus="Media\\UI\\song_3_s.png"
          image_click="Media\\UI\\song_3.png"
          hflip="false" vflip="true"
          alpha="1.0"
         use_standard_effect="true">

    <actionspressup>
      <stopallsounds/>
      <unpausegame />
      <popui ui="pause_menu"/>
      <playmusic sound="ed_sheeran.mp3" loop="true"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav" />
    </actionspressdown>

  </button>
</uiscreen>