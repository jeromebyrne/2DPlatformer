<uiscreen show_cursor="true">
  <sprite name="1_load_splash"
           process_input="false"
           posX ="-960" posY ="-540" width="1920" height ="1080"
           image="Media\\UI\\quake_bg_2.png"
           hflip="false" vflip="true"
           alpha="1.0"
          use_standard_effect="true">
  </sprite>

  <animatedsprite name="1_noise_anim"
                   process_input="false"
                   posX ="-960" posY ="-540" width="1920" height ="1080"
                   image="Media\UI\noise_layer.png"
                   hflip="false" vflip="false"
                   alpha="0.15"
                   fps ="20">
    <frames frame1="Media\UI\noise_layer.png"
            frame2="Media\UI\noise_layer_2.png"
            frame3="Media\UI\noise_layer_3.png"
            frame4="Media\UI\noise_layer_4.png"
            frame5="Media\UI\noise_layer_5.png"
            frame6="Media\UI\noise_layer_6.png"
    />
  </animatedsprite>

<sprite name="2_title"
           process_input="false"
           posX ="-400" posY ="-300" width="800" height ="606"
           image="Media\\UI\\borb_detected.png"
           hflip="false" vflip="true"
           alpha="1.0"
          use_standard_effect="true">
  </sprite>

<button name="4_continue"
          process_input="true"
          posX ="-150" posY ="-150" width="327.5" height ="303"
          image="Media\UI\rita_profile.png"
          image_focus="Media\UI\rita_profile_2.png"
          image_click="Media\UI\rita_profile.png"
          hflip="false" vflip="true"
          alpha="1.0"
          use_standard_effect="true">
    
    <actionspressup>
      <fadeout time="150"/>
      <popui ui="character_select_4" />
      <pushui ui="gameloading" />
      <fadein time="150"/>
      <stopallsounds />
      <loadlevel level="XmlFiles\village.xml" />
      <popui ui="gameloading" />
      <pushui ui="game_hud" />
    </actionspressup>
    
    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav" />
    </actionspressdown>
    
  </button>

  <animatedsprite name="9_anim"
                   process_input="false"
                   posX ="-500" posY ="-150" width="211.4" height ="280"
                   image="Media\\characters\\player\\player_run_1.png"
                   hflip="false" vflip="true"
                   alpha="1.0"
                   fps ="10">
    <frames frame1="Media\\quake_char_1\\1.png"
frame2="Media\\quake_char_1\\2.png"
frame3="Media\\quake_char_1\\3.png"
