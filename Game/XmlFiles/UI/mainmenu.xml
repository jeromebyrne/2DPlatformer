<uiscreen>
  
  <sprite name="1_title_background"
          process_input="false"
          posX ="-960" posY ="-540" width="1920" height ="1080"
          image="Media\UI\quake_title.png"
          hflip="false" vflip="true"
          alpha="1.0"
          use_standard_effect="true">
  </sprite>

  <animatedsprite name="1_u"
                   process_input="false"
                   posX ="-960" posY ="-540" width="1920" height ="1080"
                   image="Media\UI\noise_layer.png"
                   hflip="false" vflip="false"
                   alpha="0.15"
                   fps ="20">
    <frames frame1="Media\UI\noise_layer.png"
            frame2="Media\UI\noise_layer_2.png"
            frame3="Media\UI\noise_layer_3.png"
            frame4="Media\UI\noise_layer_4.png"
            frame5="Media\UI\noise_layer_5.png"
            frame6="Media\UI\noise_layer_6.png"
    />
  </animatedsprite>

  <sprite name="4_special_edition"
         process_input="false"
         posX ="-250" posY ="480" width="504" height ="57"
         image="Media\UI\special_edition.png"
         hflip="false" vflip="true"
         alpha="1.0"
         use_standard_effect="true">
  </sprite>
  
  <button name="3_new_game"
          process_input="true"
          posX ="-920" posY ="150" width="256" height ="256"
          image="Media\UI\quake_symbol_2.png"
          image_focus="Media\UI\quake_symbol.png"
          image_click="Media\UI\quake_symbol_2.png"
          hflip="false" vflip="true"
          alpha="1.0"
          use_standard_effect="true">
    
    <actionspressup>
      <fadeout time="150"/>
      <popui ui="mainmenu" />
      <pushui ui="character_select" />
    </actionspressup>
    
    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav" />
    </actionspressdown>
    
  </button>

  <button name="5_level_editor"
          process_input="true"
          posX ="-900" posY ="-100" width="210" height ="210"
          image="Media\UI\quake_2_symbol_2.png"
          image_focus="Media\UI\quake_2_symbol.png"
          image_click="Media\UI\quake_2_symbol_2.png"
          hflip="false" vflip="true"
          alpha="1.0"
          use_standard_effect="true">
    <actionspressup>
      <fadeout time="150"/>
      <popui ui="mainmenu" />
      <pushui ui="level_select_edit" />
      <fadein time="150"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav"/>
    </actionspressdown>
  </button>
  
  <button name="7_quit"
           process_input="true"
           posX ="-900" posY ="-350" width="210" height ="210"
          image="Media\UI\quake_3_symbol_2.png"
          image_focus="Media\UI\quake_3_symbol.png"
          image_click="Media\UI\quake_3_symbol_2.png"
          hflip="false" vflip="true"
           alpha="1.0"
          use_standard_effect="true">

    <actionspressup>
      <quittodesktop />
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav" />
    </actionspressdown>

  </button>
</uiscreen>