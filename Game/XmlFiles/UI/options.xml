<uiscreen>
  <sprite name="1_title_background"
          process_input="false"
          posX ="-970" posY ="-540" width="1939.2" height ="1090.8"
          image="Media\\UI\\main_menu_bg.png"
          hflip="false" vflip="false"
          alpha="1.0">
  </sprite>

  <sprite name="21_title_background"
           process_input="false"
           posX ="-965" posY ="-535" width="1979.2" height ="1120.8"
           image="Media\\UI\\main_menu_bg_2.png"
           hflip="false" vflip="false"
           alpha="0.5">
  </sprite>

  <sprite name="24_title_death_leak"
          process_input="false"
          posX ="-960" posY ="-540" width="1920" height ="1080"
          image="Media\UI\frame.png"
          hflip="false" vflip="false"
          alpha="1.0"
          use_standard_effect="true">
  </sprite>

  <animatedsprite name="25_noise_anim"
                   process_input="false"
                   posX ="-960" posY ="-540" width="1920" height ="1080"
                   image="Media\UI\noise_layer.png"
                   hflip="false" vflip="false"
                   alpha="0.25"
                   fps ="10">
    <frames frame1="Media\UI\noise_layer.png"
            frame2="Media\UI\noise_layer_2.png"
            frame3="Media\UI\noise_layer_3.png"
            frame4="Media\UI\noise_layer_4.png"
            frame5="Media\UI\noise_layer_5.png"
            frame6="Media\UI\noise_layer_6.png"
    />
  </animatedsprite>

  <checkbox name="2_music_checkbox"
            process_input="true"
            posX ="100" posY ="-60" width="447" height ="424"
            image="Media\\UI\\music_off.png"
            tick_image="Media\\UI\\music_on.png"
            image_focus="Media\\UI\\music_off_focus.png"
            tick_image_focus="Media\\UI\\music_on_focus.png"
            hflip="false" vflip="false"
            alpha="1.0"
            checked="true">

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>
    
    <actions_check>
      <unmutemusic/>
      <playmusic sound="weather\\horror.mp3" loop="true"/>
    </actions_check>

    <actions_uncheck>
      <mutemusic/>
    </actions_uncheck>
  </checkbox>

  <checkbox name="3_sound_checkbox"
          process_input="true"
          posX ="170" posY ="-325" width="350" height ="332"
          image="Media\\UI\\sfx_off.png"
          tick_image="Media\\UI\\sfx_on.png"
            image_focus="Media\\UI\\sfx_off_focus.png"
            tick_image_focus="Media\\UI\\sfx_on_focus.png"
          hflip="false" vflip="false"
          alpha="1.0"
          checked="true">

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

    <actions_check>
      <unmutesoundeffects/>
    </actions_check>

    <actions_uncheck>
      <mutesoundeffects/>
    </actions_uncheck>

  </checkbox>
  
  <button name="6_back"
         process_input="true"
         posX ="-940" posY ="-470" width="285" height ="162"
         image="Media\\UI\\buttons\\back1.png"
         image_focus="Media\\UI\\buttons\\back2.png"
         image_click="Media\\UI\\buttons\\back3.png"
         hflip="false" vflip="false"
         alpha="1.0">

    <actionspressup>
      <popui ui="options" />
      <pushui ui="mainmenu" />
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

  </button>

  <sprite name="9_player_icon"
          process_input="false"
          posX ="-770" posY ="-60" width="256" height ="256"
          image="Media\\UI\\player_silhouette_2.png"
          hflip="false" vflip="false"
          alpha="1.0">
  </sprite>

  <sprite name="91_player_icon"
          process_input="false"
          posX ="-770" posY ="-60" width="256" height ="256"
          image="Media\\UI\\player_silhouette_3.png"
          hflip="false" vflip="false"
          alpha="1.0">
  </sprite>
  
</uiscreen>