<uiscreen>
  <sprite name="1_title_background"
          process_input="false"
          posX ="-970" posY ="-540" width="1939.2" height ="1090.8"
          image="Media\UI\main_menu_2.png"
          hflip="false" vflip="false"
          alpha="1.0"
          use_standard_effect="true">
  </sprite>

  <sprite name="21_title_background"
           process_input="false"
           posX ="-970" posY ="-540" width="1969.2" height ="1115.8"
           image="Media\UI\main_menu_blur.png"
           hflip="false" vflip="false"
           alpha="0.45">
  </sprite>

  <sprite name="24_title_death_leak"
          process_input="false"
          posX ="-960" posY ="-540" width="1920" height ="1080"
          image="Media\UI\frame.png"
          hflip="false" vflip="false"
          alpha="1.0"
          use_standard_effect="true">
  </sprite>

  <animatedsprite name="26_scratch_anim"
                   process_input="false"
                   posX ="-960" posY ="-540" width="1920" height ="1080"
                   image="Media\UI\noise_layer.png"
                   hflip="false" vflip="false"
                   alpha="0.10"
                  use_standard_effect="true"
                   fps ="11">
    <frames frame1="Media\UI\film_frame.png"
            frame2="Media\UI\film_frame_2.png"
            frame3="Media\UI\film_frame_3.png"
            frame4="Media\UI\film_frame_4.png"
    />
  </animatedsprite>

  <checkbox name="2_music_checkbox"
            process_input="true"
            posX ="-450" posY ="-100" width="150" height ="150"
            image="Media\\UI\\music_off.png"
            tick_image="Media\\UI\\music_on.png"
            image_focus="Media\\UI\\music_off_focus.png"
            tick_image_focus="Media\\UI\\music_on_focus.png"
            hflip="false" vflip="false"
            alpha="1.0"
            checked="true"
            use_standard_effect="true">

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>
    
    <actions_check>
      <unmutemusic/>
      <playmusic sound="weather\\horror.mp3" loop="true"/>
    </actions_check>

    <actions_uncheck>
      <mutemusic/>
    </actions_uncheck>
  </checkbox>

  <checkbox name="3_sound_checkbox"
          process_input="true"
          posX ="-225" posY ="-200" width="150" height ="150"
          image="Media\\UI\\sfx_off.png"
          tick_image="Media\\UI\\sfx_on.png"
            image_focus="Media\\UI\\sfx_off_focus.png"
            tick_image_focus="Media\\UI\\sfx_on_focus.png"
          hflip="false" vflip="false"
          alpha="1.0"
          checked="true"
            use_standard_effect="true">

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

    <actions_check>
      <unmutesoundeffects/>
    </actions_check>

    <actions_uncheck>
      <mutesoundeffects/>
    </actions_uncheck>

  </checkbox>

  <button name="4_language_select"
          process_input="true"
          posX ="400" posY ="-200" width="240" height ="135"
          image="Media\UI\flags\british_unfocused.png"
          image_focus="Media\UI\flags\british.png"
          image_click="Media\UI\flags\british.png"
          hflip="false" vflip="false"
          alpha="1.0"
          use_standard_effect="true">
    <actionspressup>
      <popui ui="options" />
      <pushui ui="language_select_settings" />
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3"/>
    </actionspressdown>
  </button>
  
  <button name="6_back"
         process_input="true"
         posX ="50" posY ="-400" width="130" height ="130"
         image="Media\\UI\\buttons\\back1.png"
         image_focus="Media\\UI\\buttons\\back2.png"
         image_click="Media\\UI\\buttons\\back2.png"
         hflip="false" vflip="false"
         alpha="1.0"
          use_standard_effect="true">

    <actionspressup>
      <popui ui="options" />
      <pushui ui="mainmenu" />
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

  </button>
  
</uiscreen>