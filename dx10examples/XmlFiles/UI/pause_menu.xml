<uiscreen>
  <sprite name="0_bg"
          process_input="false"
          posX ="-1024" posY ="-540" width="2048" height ="2048"
          image="Media\\UI\\blank_dark.png"
          hflip="false" vflip="false"
          alpha="0.35">
  </sprite>

  <sprite name="1_menu_backing"
         process_input="false"
         posX ="-235" posY ="-260" width="469" height ="497"
         image="Media\\UI\\pause_menu_backing.png"
         hflip="false" vflip="false"
         alpha="1">
  </sprite>
  
  <button name="3_quit"
           process_input="true"
           posX ="-75" posY ="0" width="150" height ="75"
           image="Media\\UI\\buttons\\quit.dds"
           image_focus="Media\\UI\\buttons\\quit2.dds"
           image_click="Media\\UI\\buttons\\quit3.dds"
           hflip="false" vflip="false"
           alpha="1.0">

    <actionspressup>
      <stopallsounds/>
      <fadeout time="50"/>
      <unpausegame />
      <destroylevel />
      <popui ui="pause_menu"/>
      <popui ui="game_hud"/>
      <pushui ui="mainmenu"/>
      <playmusic sound="" loop="true"/>
      <fadein time="750"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

  </button>
  
  <button name="4_resume"
           process_input="true"
           posX ="-125" posY ="-100" width="275" height ="100"
           image="Media\\UI\\buttons\\resume.dds"
           image_focus="Media\\UI\\buttons\\resume2.dds"
           image_click="Media\\UI\\buttons\\resume3.dds"
           hflip="false" vflip="false"
           alpha="1.0">

    <actionspressup>
      <unpausegame />
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.mp3" />
    </actionspressdown>

  </button>
  
</uiscreen>