<uiscreen>

  <sprite name="0_bg"
          process_input="false"
          posX ="-1024" posY ="-540" width="2048" height ="2048"
          image="Media\\UI\\blank_white.png"
          hflip="false" vflip="false"
          alpha="0.1"
          use_standard_effect="true">
  </sprite>

  <animatedsprite name="1_scratch_anim"
                  process_input="false"
                  posX ="-960" posY ="-540" width="1920" height ="1080"
                  image="Media\UI\noise_layer.png"
                  hflip="false" vflip="false"
                  alpha="0.10"
                 use_standard_effect="true"
                  fps ="11">
    <frames frame1="Media\UI\film_frame.png"
            frame2="Media\UI\film_frame_2.png"
            frame3="Media\UI\film_frame_3.png"
            frame4="Media\UI\film_frame_4.png"
    />
  </animatedsprite>

  <button name="21_english"
         process_input="true"
         posX ="-112.5" posY ="200" width="225" height ="125"
         image="Media\UI\flags\eng_flag_fade.png"
         image_focus="Media\UI\flags\eng_flag.png"
         image_click="Media\UI\flags\eng_flag.png"
         hflip="false" vflip="true"
         alpha="1.0"
         use_standard_effect="true">
    <actionspressup>
      <set_language language="en-gb" />
      <fadeout time="150"/>
      <popui ui="language_select" />
      <pushui ui="mainmenu" />
      <fadein time="50"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav"/>
    </actionspressdown>
  </button>

  <button name="22_brazilian"
          process_input="true"
          posX ="-112.5" posY ="0" width="225" height ="125"
          image="Media\UI\flags\brazil_flag_fade.png"
          image_focus="Media\UI\flags\brazil_flag.png"
          image_click="Media\UI\flags\brazil_flag.png"
          hflip="false" vflip="true"
          alpha="1.0"
          use_standard_effect="true">
    <actionspressup>
      <set_language language="pt-br" />
      <fadeout time="150"/>
      <popui ui="language_select" />
      <pushui ui="mainmenu" />
      <fadein time="50"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav"/>
    </actionspressdown>
  </button>

  <button name="23_german"
          process_input="true"
          posX ="-112.5" posY ="-200" width="225" height ="125"
          image="Media\UI\flags\german_flag_fade.png"
          image_focus="Media\UI\flags\german_flag.png"
          image_click="Media\UI\flags\german_flag.png"
          hflip="false" vflip="true"
          alpha="1.0"
          use_standard_effect="true">
    <actionspressup>
      <set_language language="en-gb" />
      <fadeout time="150"/>
      <popui ui="language_select" />
      <pushui ui="mainmenu" />
      <fadein time="50"/>
    </actionspressup>

    <actionspressdown>
      <playsoundeffect sound="UI\\click.wav"/>
    </actionspressdown>
  </button>

</uiscreen>